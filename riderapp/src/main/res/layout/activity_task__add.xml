    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:float="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.goyo.traveltracker.forms.Task_Add">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/remark_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_cash_collection"
            android:hint="Title"
            android:id="@+id/Task_Title"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="10dp" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/remark_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/remark_head"
            float:fletPaddingBottom="10dp"
            float:fletTextAppearance="@style/floatlabelededittext2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/border_cash_collection"
            android:gravity="top"
            android:id="@+id/Task_Body"
            android:hint="Tell more about it."
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:lines="10"
            android:padding="10dp" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cover"
            android:background="@drawable/border_cash_collection"
            android:layout_width="match_parent"
            android:layout_below="@+id/remark_form"
            android:layout_height="wrap_content">
        <com.pchmn.materialchips.ChipsInput
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/remark_form"
            android:layout_height="wrap_content"
            android:id="@+id/chip"
            app:deletable="true"
            app:hint="  Enter Tags" />
        </LinearLayout>

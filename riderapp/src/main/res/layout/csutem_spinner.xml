<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:paddingLeft="5dp"

  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:drawableLeft="@drawable/rider_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Rider 1 Rider 1"
        android:id="@+id/name"
        android:gravity="center_vertical"
         android:layout_weight="1"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="13dp"/>
        <TextView
            android:drawableLeft="@drawable/times"
            android:fontFamily="sans-serif-light"
            android:id="@+id/rider_lastseen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="1 min"
            android:layout_marginRight="8dp"
            android:textColor="#000"
            android:textSize="13dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/rider_numbr"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:drawableLeft="@drawable/phone"
            android:layout_height="wrap_content"
            android:text="9996325763"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/pending_deliver_at"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="20km away"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rider_btry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/battery"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="63%"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="12dp" />


    </LinearLayout>
</LinearLayout>